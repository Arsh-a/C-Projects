
#include <stdio.h>
#include <stdlib.h>
int gameOver=0;
int check=0;
int count=0;
char computer, user;
int userChoice;
int cchoice;
/*function to check if the cell entered by user or computer
is empty or it is being occupied. If it is not empty, the
function will return 1 otherwise it will return 0 */

int checkEmpty(char arr[3][3],char choice){
  switch(choice){
      
      
      case 1:
      if(arr[0][0]!=' ')
      {
          check=1;
      }
      else{
          check=0;
      }
      break;
      
      case 2:
      if(arr[0][1]!=' ')
      {
          check=1;
      }
      else{
          check=0;
      }
      break;
      
      case 3:
      if(arr[0][2]!=' ')
      {
          check=1;
      }
      else{
          check=0;
      }
      break;
      
      case 4:
      if(arr[1][0]!=' ')
      {
          check=1;
      }
      else{
          check=0;
      }
      break;
      
      case 5:
      if(arr[1][1]!=' ')
      {
          check=1;
      }
      else{
          check=0;
      }
      break;
      
      case 6:
      if(arr[1][2]!=' ')
      {
          check=1;
      }
      else{
          check=0;
      }
      break;
      
      case 7:
      if(arr[2][0]!=' ')
      {
          check=1;
      }
      else{
          check=0;
      }
      break;
      
      case 8:
      if(arr[2][1]!=' ')
      {
          check=1;
      }
      else{
          check=0;
      }
      break;
      
      case 9:
      if(arr[2][2]!=' ')
      {
          check=1;
      }
      else{
          check=0;
      }
      break;
  }
  
  return check;
}

//function to assign the user's choice to the board
void AssigningUserChoice(char arr[3][3],int userChoice){
    switch(userChoice){
        case 1:
        arr[0][0]=user;
        break;
        
        case 2:
        arr[0][1]=user;
        break;
        
        case 3:
        arr[0][2]=user;
        break;
        
        case 4:
        arr[1][0]=user;
        break;
        
        case 5:
        arr[1][1]=user;
        break;
        
        case 6:
        arr[1][2]=user;
        break;
        
        case 7:
        arr[2][0]=user;
        break;
        
        case 8:
        arr[2][1]=user;
        break;
        
        case 9:
        arr[2][2]=user;
        break;
    }
    
}

//function to assign the value of computer to the board
void AssignComputerChoice(char arr[3][3],int cchoice)
{
    switch(cchoice){
        case 1:
        arr[0][0]=computer;
        break;
        
        case 2:
        arr[0][1]=computer;
        break;
        
        case 3:
        arr[0][2]=computer;
        break;
        
        case 4:
        arr[1][0]=computer;
        break;
        
        case 5:
        arr[1][1]=computer;
        break;
        
        case 6:
        arr[1][2]=computer;
        break;
        
        case 7:
        arr[2][0]=computer;
        break;
        
        case 8:
        arr[2][1]=computer;
        break;
        
        case 9:
        arr[2][2]=computer;
        break;
            }
}
/*A function to prompt user to enter the choice till
 the entered choice has not been used before*/
void CheckingUserChoice(char arr[3][3])
{
    
    int check=0;
    while(check!=1)
    {
        printf("\nEnter the cell number : ");
        scanf("%d",&userChoice);
        check=checkEmpty(arr,userChoice);
        if(check==0)
        {
            break;
        }
    }
    count++;
    AssigningUserChoice(arr,userChoice);
}

/*function to prompt computer to generate a number, till
the generated number has not been used before*/
void CheckingComputerChoice(char arr[3][3]){
    while(check!=1)
    {
       
       int flag=0;
        for(int k=0;k<3;k++)
    {
        for(int l=0;l<3;l++)
        {
            if(arr[k][l]=='\0')
            {
                cchoice=rand()%9 +1;
                flag=1;
                break;
            }
            if(flag==1)
            {
                break;
            }
            
        }
    }
        check=checkEmpty(arr,cchoice);
        if(check==0)
        {
            break;
        }
    }
    count++;
    AssignComputerChoice(arr,cchoice);
}



//function to print the board
void printBoard(char arr[3][3])
{
        for(int i=0;i<3;i++)
    {
        for(int j=0;j<3;j++)
        {
            if(arr[i][j]==' ')
            {
                printf("\t");
            }
            else
            {
                printf("%c\t",arr[i][j]);
            }
        }
        printf("\n");
    }
}

//fuction to compute the winner
void logic(char arr[3][3], char user, char computer)
{
      //horizontal comparison
    if(arr[0][0]==arr[0][1] && arr[0][1]==arr[0][2] && arr[0][2]==user)
    {
        gameOver++;
        printf("\nyou won");
    }
    
    else if(arr[0][0]==arr[0][1] && arr[0][1]==arr[0][2] && arr[0][2]==computer)
    {
        gameOver++;
        printf("\nComputer won");
    }
    
    if(arr[1][0]==arr[1][1] && arr[1][1]==arr[1][2] && arr[1][2]==user)
    {
        gameOver++;
        printf("\nyou won");
    }
    
    else if(arr[1][0]==arr[1][1] && arr[1][1]==arr[1][2] && arr[1][2]==computer)
    {
        gameOver++;
        printf("\nComputer won");
    }
    
    if(arr[2][0]==arr[2][1] && arr[2][1]==arr[2][2] && arr[2][2]==user)
    {
        gameOver++;
        printf("\nyou won");
    }
    
    else if(arr[2][0]==arr[2][1] && arr[2][1]==arr[2][2] && arr[2][2]==computer)
    {
        gameOver++;
        printf("\nComputer won");
    }
    
    
    
    //vertical comparison
    
    if(arr[0][0]==arr[1][0] && arr[1][0]==arr[2][0] && arr[2][0]==user)
    {
        gameOver++;
        printf("\nyou won");
    }
    
    if(arr[0][0]==arr[1][0] && arr[1][0]==arr[2][0] && arr[2][0]==computer)
    {
        gameOver++;
        printf("\ncomputer won");
    }
    
    
    if(arr[0][1]==arr[1][1] && arr[1][1]==arr[2][1] && arr[2][1]==user)
    {
        gameOver++;
        printf("\nyou won");
    }
    
    if(arr[0][1]==arr[1][1] && arr[1][1]==arr[2][1] && arr[2][1]==computer)
    {
        gameOver++;
        printf("\ncomputer won");
    }
    
    
    if(arr[0][2]==arr[1][2] && arr[1][2]==arr[2][2] && arr[2][2]==user)
    {
        gameOver++;
        printf("\nyou won");
    }
    
    if(arr[0][2]==arr[1][2] && arr[1][2]==arr[2][2] && arr[2][2]==computer)
    {
        gameOver++;
        printf("\ncomputer won");
    }
    
    
    //checking diagonally
    
    if(arr[0][0]==arr[1][1] && arr[1][1]==arr[2][2] && arr[2][2]==user)
    {
        gameOver++;
        printf("\nyou won");
    }
    
    if(arr[0][2]==arr[1][1] && arr[1][1]==arr[2][0] && arr[2][0]==computer)
    {
        gameOver++;
        printf("\ncomputer won");
    }
    
    if(count==9)
    {
        printf("\nits a draw");
        gameOver++;
    }
}

int main()
{
    char choice;
    printf("Choose a symbol : x or o : ");
    scanf("%c",&choice);
    
    
    user=choice;
    if(choice=='x')
    {
        computer='o';
    }
    else{
        computer='x';
    }
    
    char arr[3][3]={{' ',' ',' '},{' ',' ',' '},{' ',' ',' '}};
    while(gameOver!=1)
    {
        CheckingUserChoice(arr);
        CheckingComputerChoice(arr);
        printBoard(arr);
        logic(arr,user,computer);
    }
}
